# GetLainux Optimized Kernel Configuration
# This configuration file contains optimized kernel settings
# for maximum performance with minimal bloat
#
# Author: Nishant Gaurav
# Version: 1.0

# ============================================
# General Kernel Options
# ============================================
# Enable 64-bit kernel
CONFIG_64BIT=y

# ============================================
# CPU Scheduler Optimizations
# ============================================
# Use CFS (Completely Fair Scheduler)
CONFIG_FAIR_GROUP_SCHED=y
CONFIG_CFS_BANDWIDTH=y
CONFIG_SCHED_AUTOGROUP=n

# ============================================
# Memory Management
# ============================================
# Optimize for performance
CONFIG_HIGHMEM=n
CONFIG_HIGHMEM4G=n
CONFIG_HIGHMEM64G=n
CONFIG_MEMORY_HOTPLUG=n
CONFIG_MEMORY_HOTREMOVE=n

# ============================================
# File Systems (Minimal - only essential)
# ============================================
CONFIG_EXT4_FS=y
CONFIG_EXT4_FS_POSIX_ACL=y
CONFIG_EXT4_FS_SECURITY=y
CONFIG_VFAT_FS=y
CONFIG_FAT_DEFAULT_CODEPAGE=437
CONFIG_FAT_DEFAULT_IOCHARSET="utf8"
CONFIG_EFIVAR_FS=y

# Disable unnecessary filesystems
# CONFIG_BTRFS_FS=n
# CONFIG_XFS_FS=n
# CONFIG_REISERFS_FS=n
# CONFIG_JFS_FS=n
# CONFIG_HFSPLUS_FS=n

# ============================================
# Network (Essential only)
# ============================================
CONFIG_NET=y
CONFIG_INET=y
CONFIG_IPV6=y
CONFIG_NETDEVICES=y
CONFIG_ETHERNET=y

# Disable unnecessary network protocols
# CONFIG_IPX=n
# CONFIG_ATALK=n
# CONFIG_IRDA=n
# CONFIG_BLUETOOTH=n
# CONFIG_IEEE802154=n
# CONFIG_NFC=n

# ============================================
# Hardware Support (Essential)
# ============================================
CONFIG_PCI=y
CONFIG_PCI_MSI=y
CONFIG_PCI_IOV=y
CONFIG_ACPI=y
CONFIG_ACPI_AC=y
CONFIG_ACPI_BATTERY=y
CONFIG_ACPI_BUTTON=y
CONFIG_ACPI_FAN=y
CONFIG_ACPI_PROCESSOR=y
CONFIG_ACPI_THERMAL=y

# Storage
CONFIG_ATA=y
CONFIG_SATA_AHCI=y
CONFIG_SATA_AHCI_PLATFORM=y
CONFIG_NVME_CORE=y
CONFIG_BLK_DEV_NVME=y

# USB
CONFIG_USB=y
CONFIG_USB_XHCI_HCD=y
CONFIG_USB_EHCI_HCD=y
CONFIG_USB_OHCI_HCD=y
CONFIG_USB_UHCI_HCD=y
CONFIG_USB_STORAGE=y

# Graphics (Essential drivers)
CONFIG_DRM=y
CONFIG_DRM_I915=y
CONFIG_DRM_AMDGPU=y
CONFIG_DRM_NOUVEAU=y
CONFIG_DRM_RADEON=y

# ============================================
# Security Features
# ============================================
CONFIG_SECURITY=y
CONFIG_SECURITYFS=y
CONFIG_HARDENED_USERCOPY=y
CONFIG_STACKPROTECTOR=y
CONFIG_STACKPROTECTOR_STRONG=y

# ============================================
# Performance Features
# ============================================
CONFIG_PREEMPT_NONE=y
CONFIG_NO_HZ_IDLE=y
CONFIG_NO_HZ_FULL=y
CONFIG_RCU_NOCB_CPU=y
CONFIG_IRQ_TIME_ACCOUNTING=y

# ============================================
# Disable Debugging (Production Build)
# ============================================
CONFIG_DEBUG_KERNEL=n
CONFIG_DEBUG_INFO=n
CONFIG_DEBUG_INFO_DWARF4=n
CONFIG_GDB_SCRIPTS=n

# ============================================
# Kernel Hacking (Disabled for Performance)
# ============================================
CONFIG_KGDB=n
CONFIG_KGDB_SERIAL_CONSOLE=n
CONFIG_KGDB_KDB=n

# ============================================
# Notes
# ============================================
# This is a template configuration
# Actual kernel build requires:
# 1. Download kernel source
# 2. Copy this config to .config
# 3. Run: make oldconfig
# 4. Build: make -j$(nproc)
# 5. Install: make modules_install && make install

